{
    "manifest_version": 3,
    "name": "Search and Destroy",
    "version": "1.0.1",
    "author": "Jason Lu and Nic Jackson",
    "description": "Replace the words you don't want with a little twist",
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_icon": "images/invisible-copy-16.png",
      "default_popup": "popup.html",
      "default_title": "Click here to begin replacing words on any website!"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content-script.js"]
        }
    ],
    "icons": {
        "16": "images/invisible-copy-16.png",
        "32": "images/invisible-copy-32.png",
        "48": "images/invisible-copy-48.png",
        "128": "images/invisible-copy-128.png"
    }
  }